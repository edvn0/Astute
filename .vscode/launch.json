{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceRoot}/build/Application/App",
      "cwd": "${workspaceRoot}/Application",
      "args": [
        "--wd",
        "${workspaceRoot}/Application"
      ],
      "environment": [
        {
          "name": "LOG_LEVEL",
          "value": "Debug"
        },
        {
          "name": "ENABLE_VALIDATION_LAYERS",
          "value": "ON"
        }
      ],
    }
  ]
}